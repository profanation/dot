# audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# screen brightness controls
exec_always --no-startup-id "chmod 777 /sys/class/backlight/intel_backlight/brightness"
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10


#keyboard brightness controls 

exec_always --no-startup-id "chmod 777 /sys/class/leds/smc::kbd_backlight/brightness"

bindsym XF86KbdBrightnessUp exec light -s sysfs/leds/smc::kbd\_backlight -A 10   #increase Kbd brightness

bindsym XF86KbdBrightnessDown exec light -s sysfs/leds/smc::kbd\_backlight -U 10 #decrease Kbd brightness




exec_always "setxkbmap -layout us,ru"
exec_always setxkbmap -option grp:alt_shift_toggle
